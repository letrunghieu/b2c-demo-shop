<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="CustomerPriceValue">
        <property name="quantity" type="integer" />
        <property name="price" type="float" />
    </transfer>

    <transfer name="CustomerPrice">
        <property name="customerNumber" type="string" />
        <property name="itemNumber" type="string" />
        <property name="values" type="CustomerPriceValue[]" />
    </transfer>

    <transfer name="ProductCustomerPricePayload">
        <property name="customerNumber" type="string" />
        <property name="price" type="int" />
    </transfer>

    <transfer name="ProductPayload">
        <property name="customerPrices" type="ProductCustomerPricePayload[]" />
    </transfer>

    <transfer name="ProductPageSearch">
        <property name="customerPrices" type="ProductCustomerPricePayload[]" />
        <property name="customerPriceCustomerNumbers" type="string[]" />
    </transfer>

    <transfer name="PageMap">
        <property name="customerPrices" type="array" />
    </transfer>
</transfers>

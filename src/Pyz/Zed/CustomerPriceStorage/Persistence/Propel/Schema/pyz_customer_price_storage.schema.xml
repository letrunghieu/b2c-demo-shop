<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\CustomerPriceStorage\Persistence" package="src.Orm.Zed.CustomerPriceStorage.Persistence">

    <table name="pyz_customer_price_storage">
        <column name="id_customer_price_storage" type="BIGINT" autoIncrement="true" primaryKey="true" />
        <column name="fk_customer_price" type="VARCHAR" />

        <id-method-parameter value="pyz_customer_price_storage_pk_seq" />
        
        <behavior name="synchronization">
            <parameter name="resource" value="customer_price" />
            <parameter name="store" value="false" />
            <parameter name="locale" value="false" />
            <parameter name="key_suffix_column" value="fk_customer_price" />
            <parameter name="queue_group" value="sync.storage.customer_price" />
        </behavior>

        <behavior name="timestampable" />

    </table>

</database>

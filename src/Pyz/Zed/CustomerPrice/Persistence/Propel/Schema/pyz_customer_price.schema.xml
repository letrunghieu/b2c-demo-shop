<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          name="zed"
          xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd"
          namespace="Orm\Zed\CustomerPrice\Persistence"
          package="src.Orm.Zed.CustomerPrice.Persistence">

    <table name="pyz_customer_price" idMethod="native">
        <column name="customer_price_id" required="true" type="BIGINT" primaryKey="true" autoIncrement="true" />
        <column name="customer_number" required="true" type="VARCHAR" />
        <column name="item_number" required="true" type="VARCHAR" />
        <column name="quantity" required="true" type="INTEGER" />
        <column name="price" required="true" type="FLOAT" />

        <id-method-parameter value="pyz_customer_price_pk_seq" />
    </table>

</database>
